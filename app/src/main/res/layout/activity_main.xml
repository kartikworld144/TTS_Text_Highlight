<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF9800"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_text_to_speech"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="@string/text_to_speech"
        android:textColor="@color/design_default_color_primary"
        android:textSize="30sp"
        android:background="@color/sun_yellow"
        android:layout_margin="20dp"
        android:padding="20dp"
        android:textStyle="bold"
        />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <EditText
                android:id="@+id/ed_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="30dp"
                android:maxLines="2"
                android:hint="Please write your text hare...."
                android:visibility="visible"
                android:background="#C5C5C5"
                android:textColor="#0027FF"
                android:padding="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:textSize="25sp"
                />

            <TextView
                android:id="@+id/tv_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="30dp"
                android:background="#FFFFFF"
                android:textColor="#000000"
                android:padding="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:textSize="25sp"
                />



        </LinearLayout>


    </ScrollView>


    <Button
        android:id="@+id/btn_speak_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="12dp"
        android:layout_gravity="center"
        android:onClick="speakClicked"
        android:text="@string/speak_text"
        android:textColor="@color/yellow"
        android:textSize="18sp"
        android:textStyle="bold"
        />
    <Button
        android:id="@+id/btn_stop_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="12dp"
        android:layout_gravity="center"
        android:onClick="speakOfClicked"
        android:text="@string/stop_text"
        android:textColor="@color/yellow"
        android:textSize="18sp"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/btn_ThankYou_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="12dp"
        android:layout_gravity="center"
        android:onClick="ThankYou"
        android:text="@string/thankYou"
        android:textColor="@color/yellow"
        android:textSize="18sp"
        android:textStyle="bold"
        />
</LinearLayout>